#!/bin/bash

if [ $1 == jc ] || [ $1 == javacompile ]; then
	if [ ! -e build ]; then
		mkdir build
	fi
	javac -cp src/java:testing -d build testing/Test.java
elif [ $1 == j ] || [ $1 == java ]; then
	shift
	java -cp build testing.Test $@
elif [ $1 == p ] || [ $1 == python ]; then
	PYTHONPATH=$PYTHONPATH:src/python
	shift
	python testing/test.py $@
elif [ $1 == clean ]; then
	rm -r build
fi
